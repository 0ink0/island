include data/names
doctype html
html
  head
    title='ACNH Card'
    link(
      rel='stylesheet'
      type='text/css'
      href='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css'
    )
    script(
      src='https://code.jquery.com/jquery-3.1.1.min.js'
      integrity='sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8='
      crossorigin='anonymous'
    )
    script(
      src='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js'
    )
  body
    div.ui.container
      div.ui.menu
        div.header.item Island
      div.ui.five.cards
        each name in names
          div.card
            div.image
              div.ui.tiny.image
                img(src=`img/icons/${name.replace(' ', '_')}_NH_Villager_Icon.png`)
            div.extra.content
              div.header #{name}
