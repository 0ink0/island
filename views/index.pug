doctype html
html
  head
    title='ACNH Card'
    meta(
      charset='utf-8'
    )
    link(
      rel='stylesheet'
      type='text/css'
      href='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css'
    )
    script(
      src='https://code.jquery.com/jquery-3.1.1.min.js'
      integrity='sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8='
      crossorigin='anonymous'
    )
    script(
      src='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js'
    )
  body
    include:json(varname='island') data/island.json
    div.ui.container
      div.ui.menu
        div.header.item Island
      div.ui.five.cards
        each animal in global.$vars.island.villagers
          div.card
            div.image
              div.ui.tiny.spaced.image
                img(src=`${animal.images.icon}`)
            div.extra.content
              div.header #{animal.name}
